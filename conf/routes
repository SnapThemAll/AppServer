# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                               controllers.Application.index
GET     /isauthenticated                controllers.Application.isAuthenticated
GET     /signout                        controllers.Application.signOut

GET     /authenticate/:provider         controllers.SocialAuth.authenticate(provider)
GET     /authenticate/token/:provider   controllers.SocialAuth.authenticateToken(provider)

#GET GAME DATA
GET     /getlevels                      controllers.GameController.getLevels
GET     /getworldusers               controllers.CardController.getAllScores

#GET CARD DATA
GET     /getpic/:cardName/:fileName     controllers.CardController.getPicture(cardName, fileName)
GET     /getpicdata                     controllers.CardController.getPicturesData
GET     /getscore/:fbID                 controllers.CardController.getScore(fbID)

#ADD/REMOVE CARD DATA
POST    /uploadpic/:cardName            controllers.CardController.uploadPicture(cardName)
GET     /removepic/:cardName/:fileName  controllers.CardController.removePicture(cardName, fileName)