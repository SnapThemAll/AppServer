# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                               controllers.Application.index
GET     /isauthenticated                controllers.Application.isAuthenticated
GET     /signout                        controllers.Application.signOut

GET     /authenticate/:provider         controllers.SocialAuth.authenticate(provider)
GET     /authenticate/token/:provider   controllers.SocialAuth.authenticateToken(provider)

GET     /gettrack/:trackid              controllers.CardController.getTrack(trackid)
GET     /removetrack/:trackid           controllers.CardController.removeTrack(trackid)
GET     /getanalysis/:trackid           controllers.CardController.getAnalysis(trackid)
GET     /getalltracks                   controllers.CardController.getAllTracks
GET     /getpredictedtracks             controllers.CardController.getPredictedTracks
POST    /savetrack                      controllers.CardController.savePicture

GET     /getprofile                     controllers.UserProfileController.getProfile